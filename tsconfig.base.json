{
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
    "stripInternal": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./tests/**/*.ts"
  ]
}